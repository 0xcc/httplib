<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp"
    >
    
    <LinearLayout 
        		android:layout_width="match_parent"
        		 android:layout_height="wrap_content"
        		 android:orientation="vertical">
            <ImageView android:id="@+id/imageBook" 
                	android:background="@drawable/eff"
        			android:layout_width="wrap_content"
        			android:layout_height="match_parent"
        			android:layout_margin="5dp"
        			/>
    </LinearLayout>
    
	<TableLayout android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	>
	    <TableRow android:orientation="horizontal" 
	        android:layout_width="match_parent"
	        android:layout_height="10dp"
	        >
	        	<TextView android:id="@+id/txtTitle" 
	        	    	  android:text="title"
	        	    	  android:layout_width="match_parent"
	        	    	  android:layout_height="wrap_content"/>
	    </TableRow>
	    <TableRow android:orientation="horizontal"
	        android:layout_width="match_parent"
	        >
	        <RatingBar android:id="@+id/rating" 
	            android:layout_width="match_parent"
	            android:numStars="10" 
	            android:rating="0" 
	            android:stepSize="1.0"
	            android:max="10"
	            style="?android:attr/ratingBarStyleSmall"
	            />
	        
	    </TableRow>
	    <TableRow android:orientation="horizontal"  
	        android:layout_width="match_parent"
	        android:layout_height="10dp" >

	        
	        <TextView android:id="@+id/txtAverageRating" 
	            		android:text="average"
	            		android:layout_marginLeft="3dp"
	        	    	  android:layout_width="wrap_content"
	        	    	  android:layout_height="wrap_content"/>
	        
	        <TextView android:id="@+id/txtnumRaters" 
	            		android:text="numRaters"
	            		android:layout_marginLeft="3dp"
	        	    	  android:layout_width="wrap_content"
	        	    	  android:layout_height="wrap_content"/>
	        
	        <TextView />
	    </TableRow>
	    
	    <TableRow android:orientation="horizontal" 
	        android:layout_width="match_parent"
	        android:layout_height="10dp">
	         <TextView android:id="@+id/txtPublisher"
	            		android:text="Publisher"
	        	    	  android:layout_width="0dp"
	        	    	  android:layout_height="wrap_content"
	        	    	  android:layout_weight="1"
	        	    	  />
	        
	        <TextView android:id="@+id/txtPubdate"
	            		android:text="pubdate"
	        	    	  android:layout_width="0dp"
	        	    	  android:layout_height="wrap_content"
	        	    	  android:layout_weight="1"/>
	        <TextView />
	   
	    </TableRow>
	    
	    <TableRow android:orientation="horizontal" 
	        android:layout_width="match_parent"
	        android:layout_height="10dp">
	    			<TextView android:id="@+id/txtAuthor"
	            		android:text="Author"
	        	    	  android:layout_width="wrap_content"
	        	    	  android:layout_height="wrap_content"/>
	        <TextView />
	    </TableRow>
	</TableLayout>
	
   <ScrollView 
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="20dp"
	    android:scrollbars="none"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent">

		    <TextView android:layout_width="match_parent"
	 	    android:layout_height="wrap_content"
	 	    android:text="简介"/>
	 	
		 	<TextView android:id="@+id/txtSummary"
		 	     android:layout_width="match_parent"
		 	     android:layout_height="wrap_content"
		 	    android:text="summary"/>
		 	
		 	 	<TextView android:id="@+id/txtCatalog"
		 	     android:layout_width="match_parent"
		 	     android:layout_height="wrap_content"
		 	    android:text="catalog"/>
	 	 	
		</LinearLayout>
 	
 </ScrollView>
    

    

</LinearLayout>
